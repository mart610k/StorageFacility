<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StorageFacility.MainPage">

    <StackLayout>
        <Button Clicked="Create_New_Rack" Text="Create New Rack" BackgroundColor="BurlyWood"></Button>
        <Button Clicked="Shelf_Visible" Text="Create New Shelf" BackgroundColor="CadetBlue"></Button>
        <ContentView IsVisible="false" x:Name="newShelfPopup">
            <StackLayout>
                <Entry x:Name="shelfName" Placeholder="Write a shelf name"></Entry>
                <Picker x:Name="rackPicker"></Picker>
                <Button Clicked="CreateShelf" BackgroundColor="Coral" Text="Create Shelf"></Button>
            </StackLayout>
        </ContentView>
        <Button Clicked="Show_Register_Product" Text="Create New Product" BackgroundColor="BurlyWood"></Button>
    </StackLayout>

</ContentPage>
