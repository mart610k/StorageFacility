<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StorageFacility.CreateShelfPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Shelf name"/>
            <Entry x:Name="shelfName" Placeholder="Write a shelf name"></Entry>
            <Picker x:Name="rackPicker"/>
            <Button Clicked="CreateShelf" Text="Create Shelf"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>