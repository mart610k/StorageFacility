<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StorageFacility.ContentPages.RemoveProductAmount">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="dataPicker" SelectedIndexChanged="dataPicker_SelectedIndexChanged"  ItemDisplayBinding="{Binding data}"/>
            <Label x:Name="AmountOfProducts"></Label>
            <Entry x:Name="AmountEntry" Placeholder="Write the amount to Remove"></Entry>
            <Button Clicked="RemoveAmount" Text="Remove Amount" BackgroundColor="DarkSalmon"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>